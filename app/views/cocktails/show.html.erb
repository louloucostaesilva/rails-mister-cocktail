<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>


<p>
  <%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail) %>
</p>

<% if @cocktail.doses.count.zero? %>
  <p>
    Get your first dose!

  </p>
<% else %>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %> 
      </li>
      <li>
        <%= dose.description %>

        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
        </li>
    <% end %>
  </ul>

<% end %>



<%= link_to 'Back', cocktails_path %>